{
  "go.inferGopath": false,

  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "configFile": "app/client.web/.eslintrc.js"
  },

  "prettier.disableLanguages": ["less"],
  "prettier.trailingComma": "all",

  "files.associations": {
    "*.variables": "less",
    "*.overrides": "less"
  },

  "[handlebars]": {
    "editor.formatOnSave": false
  },

  "vsicons.associations.files": [
    {
      "icon": "tsconfig",
      "filename": true,
      "format": "svg",
      "extensions": [
        "tsconfig.client.json",
        "tsconfig.client.test.json",
        "tsconfig.renderer.json",
        "tsconfig.renderer.test.json",
        "tsconfig.server.json",
        "tsconfig.server.test.json"
      ]
    },
    {
      "icon": "webpack",
      "filename": true,
      "format": "svg",
      "extensions": ["webpack.helpers.js", "webpack.settings.js"]
    },
    {
      "icon": "jest",
      "filename": true,
      "format": "svg",
      "extensions": [
        "jest.setup.enzyme.js",
        "jest.transform.non-ts.js",
        "jest.mock.loadable.js",
        "jest.resolve.snapshots.js"
      ]
    }
  ],

  "vsicons.associations.folders": [
    {
      "icon": "script",
      "format": "svg",
      "extensions": [".scripts"]
    },
    {
      "icon": "package",
      "format": "svg",
      "extensions": ["pkg"]
    },
    {
      "icon": "services",
      "format": "svg",
      "extensions": ["svc"]
    },
    {
      "icon": "cli",
      "format": "svg",
      "extensions": ["cmd"]
    },
    {
      "icon": "temp",
      "format": "svg",
      "extensions": ["cache", ".cache"]
    },
    {
      "icon": "git",
      "format": "svg",
      "extensions": [".hooks"]
    },
    {
      "icon": "redux",
      "format": "svg",
      "extensions": ["store"]
    },
    {
      "icon": "api",
      "format": "svg",
      "extensions": ["sdk", "sdks"]
    }
  ]
}
