{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "dom",
      "scripthost",
      "es6",
      "es2018",
      "es2017.object",
      "dom.iterable",
      "es2015.iterable"
    ],
    "jsx": "react",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true,
    "paths": {
      "@client/*": [
        "src/client/*",
        "src/client/*/index.ts",
        "src/client/*/index.tsx"
      ],
      "@renderer/*": [
        "src/renderer/*",
        "src/renderer/*/index.ts",
        "src/renderer/*/index.tsx"
      ],
      "@server/*": [
        "src/server/*",
        "src/server/*/index.ts",
        "src/server/*/index.tsx"
      ],
      "@i18n/*": ["i18n/*"]
    }
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
