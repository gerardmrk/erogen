{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "scripthost", "es6", "es2017", "es2017.object"],
    "jsx": "react",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true,
    "paths": {
      "@themeStyles": ["ui-theme/semantic.less"],
      "@routeConfig": ["src/route-config.json"],
      "@asyncModuleStats": ["dist/async-modules.json"],
      "@client/*": [
        "src/client/*",
        "src/client/*/index.ts",
        "src/client/*/index.tsx",
        "src/client/*/index.js",
        "src/client/*/index.jsx",
        "src/client/*/index.json"
      ],
      "@renderer/*": [
        "src/renderer/*",
        "src/renderer/*/index.ts",
        "src/renderer/*/index.tsx",
        "src/renderer/*/index.js",
        "src/renderer/*/index.jsx",
        "src/renderer/*/index.json"
      ],
      "@server/*": [
        "src/server/*",
        "src/server/*/index.ts",
        "src/server/*/index.tsx",
        "src/server/*/index.js",
        "src/server/*/index.jsx",
        "src/server/*/index.json"
      ]
    }
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
